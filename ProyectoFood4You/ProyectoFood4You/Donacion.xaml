        <Button x:Name="btMostrarTodo" Content="Mostrar todas las donaciones" HorizontalAlignment="Left" Margin="24,53,0,0" VerticalAlignment="Top" Height="56" Width="295" FontWeight="Bold" FontSize="20" Click="btMostrarTodo_Click"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="339,53,10,253"/>
