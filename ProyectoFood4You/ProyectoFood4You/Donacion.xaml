        <Label Content="Kg's de comida" HorizontalAlignment="Left" Margin="24,407,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>
        <TextBox HorizontalAlignment="Left" Margin="183,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="28" FontWeight="Bold" FontSize="22"/>
        <TextBox HorizontalAlignment="Left" Margin="211,348,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="39"/>
        <TextBox HorizontalAlignment="Left" Margin="211,407,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="39"/>
        <Button x:Name="btModificar" Content="Modificar" HorizontalAlignment="Left" Margin="429,330,0,0" VerticalAlignment="Top" Height="55" Width="161" Click="btModificar_Click" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="btRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="649,407,0,0" VerticalAlignment="Top" Height="67" Width="180" FontWeight="Bold" FontSize="24" Click="btRegresar_Click"/>

    </Grid>
</Window>
